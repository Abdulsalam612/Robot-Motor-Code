#include <PS4Controller.h>
#include <ESP32_Servo.h>

Servo motor1;
Servo motor2;
Servo motor3;
Servo motor4;

int in1=12;
int in2=14;
int in3=27;
int in4=26;


void setup() {
  Serial.begin(115200);
  PS4.begin("3C:22:FB:52:B2:4A");
 
  motor1.attach(in1);
  motor2.attach(in2);
  motor3.attach(in3);
  motor4.attach(in4);

  motor1.write(90);
  motor2.write(90);
  motor3.write(90);
  motor4.write(90);
  delay(5000);

  // motor1.write(120);
  // motor2.write(120);
  // delay(1000);
  
  // motor1.write(90);
  // motor2.write(90);
  // delay(1000);

  // motor1.write(60);
  // motor2.write(60);
  // delay(20);
  // motor1.write(90);
  // motor2.write(90);
  // delay(20);
  // motor1.write(60);
  // motor2.write(60);
  // delay(3000);
  // motor1.write(90);
  // motor2.write(90);  


}

void loop() {

  int lx;
  int ly;
  int ry;
  int rx;
  int speed1=90;
  int speed2=90;
  int i;

   lx=PS4.LStickX();
   ly=PS4.LStickY();
   ry=PS4.RStickY();
   rx=PS4.RStickX();
  //  if(PS4.Circle()){
  //    motor1.write(0);
  //    motor2.write(0);
  //    motor3.write(0);
  //    motor4.write(0); 
  //    delay(200);
  //  }if(PS4.Square()){
  //    motor1.write(20);
  //    motor2.write(20);
  //    motor3.write(20);
  //    motor4.write(20); 
  //    delay(200);
  //  }
   if(PS4.Triangle()){
     for(i=90;i>39;i-=10){
     motor1.write(i);
     delay(20);
     motor2.write(i);
     delay(20);
     motor3.write(i);
     delay(20);
     motor4.write(i); 
     delay(20);
   }
   }
   if(PS4.Circle()){
     for(i=90;i<131;i+=10){
     motor1.write(i);
     delay(20);
     motor2.write(i);
     delay(20);
     motor3.write(i);
     delay(20);
     motor4.write(i); 
     delay(20);
   }
   }
  //  if(PS4.Cross()){
  //    motor1.write(40);
  //    motor2.write(140);
  //    motor3.write(140);
  //    motor4.write(40); 
  //    delay(200);
  //  }if(PS4.R2()){
  //    motor1.write(180);
  //    motor2.write(180);
  //    motor3.write(180);
  //    motor4.write(180); 
  //    delay(200);
  //  }

if(PS4.R1() || PS4.L1() || PS4.Cross()){
  speed1=40;
  speed2=140;
  if(PS4.R1()){
   motor1.write(90);
   motor2.write(90);
   motor3.write(90);
   motor4.write(90);
   delay(20);
     motor1.write(speed1);
     delay(30);
     motor2.write(speed2);
     delay(30);
     motor3.write(speed2);
     delay(30);
     motor4.write(speed1);     
     delay(30);
 }else if(PS4.L1()){
   motor1.write(90);
   motor2.write(90);
   motor3.write(90);
   motor4.write(90);
   delay(20);
     motor1.write(speed2);
     delay(30);
     motor2.write(speed1);
     delay(30);
     motor3.write(speed1);
     delay(30);
     motor4.write(speed2);    
     delay(30); 
 }else if(PS4.Cross()){    
    dance();
 }
  else{
  motor1.write(90);
  motor2.write(90);
  motor3.write(90);
  motor4.write(90);
 }
}else{
   if (ly>70){
     for(i=90;i<131;i+=10){
     motor1.write(i);
     delay(20);
     motor2.write(i);
     delay(20);
   }
    // speed1=ly*140/128;
    // motor1.write(speed1);
    // delay(20);
    // motor2.write(speed1);  
  
  delay(200);
    }
  else if(ly<-70){
    for(i=90;i>49;i-=10){
     motor1.write(i);
     delay(20);
     motor2.write(i);
     delay(20);
   }
      // speed1=ly*40/(-128);
      // motor1.write(speed1);
      // delay(20);
      // motor2.write(speed1);
  delay(200);
 
    }else if (lx>-70 && lx<70 && ly>-70 && ly<70 ){
      speed1=90;
      motor1.write(speed1);
      motor2.write(speed1);
      delay(200);

   }else if (lx>70){
     for(i=90;i<131;i+=10){
     motor1.write(i);
     delay(20);
     motor2.write(i);
     delay(20);
   }

    //  speed1=lx*40/(128);
    //  motor1.write(speed1);
    //  delay(20);
    //  motor2.write(speed1);
  delay(200);
   }else if (lx<-70){
     for(i=90;i>49;i-=10){
      motor1.write(i);
      delay(20);
      motor2.write(i);
      delay(20);
     }


     
    //  speed1=lx*140/(-128);
    //  motor1.write(speed1);
    //  delay(20);
    //  motor2.write(speed1);
  delay(200);
   }
  if (ry>70){
     for(i=90;i<131;i+=10){
     motor3.write(i);
     delay(20);
     motor4.write(i);
     delay(20);
    // speed2=ry*140/128;
    // motor3.write(speed2);
    // delay(20);
    // motor4.write(speed2);  
    delay(200);
     }
    }else if(ry<-70){
      for(i=90;i>49;i-=10){
       motor3.write(i);
       delay(20);
       motor4.write(i);
       delay(20);
   }



      // speed2=ry*40/(-128);
      // motor3.write(speed2);
      // delay(20);
      // motor4.write(speed2);
    delay(200);



    }else if (rx>-70 && rx<70 && ry>-70 && ry<70 ){
      speed2=90;
      motor3.write(speed2);
      motor4.write(speed2);
      delay(200);


   }else if (rx>70){
     for(i=90;i>39;i-=10){
     motor3.write(i);
     delay(20);
     motor4.write(i);
     delay(20);}




    //  speed2=rx*140/(128);
    //  motor3.write(speed2);
    //  delay(20);
    //  motor4.write(speed2);
    delay(200);   



   }else if (rx<-70){
     for(i=90;i>39;i-=10){
     motor3.write(i);
     delay(20);
     motor4.write(i);
     delay(20);}





    //  speed2=rx*40/(-128);
    //  motor3.write(speed2);
    //  delay(20);
    //  motor4.write(speed2);
  delay(200);
   }

 }  

}
void dance(){
     motor1.write(50);
     delay(20);
     motor2.write(130);
     delay(20);
     motor3.write(130);
     delay(20);
     motor4.write(50);     
     delay(1000);

     motor1.write(130);
     delay(20);
     motor2.write(50);
     delay(20);
     motor3.write(50);
     delay(20);
     motor4.write(130);     
     delay(1000);

     motor1.write(130);
     delay(20);
     motor2.write(130);
     delay(1000);

     motor1.write(50);
     delay(20);
     motor2.write(50);
     delay(1000);
     
     motor1.write(130);
     delay(20);
     motor2.write(130);
     delay(20);
     motor3.write(50);
     delay(20);
     motor4.write(50);     
     delay(1000);

     motor3.write(130);
     delay(20);
     motor4.write(130);     
     delay(1000); 

     motor3.write(50);
     delay(20);
     motor4.write(50);     
     delay(1000); 

     motor1.write(50);
     delay(20);
     motor2.write(130);
     delay(20);
     motor3.write(130);
     delay(20);
     motor4.write(50);     
     delay(3000);
     motor1.write(90);
     motor2.write(90);
     motor3.write(90);
     motor4.write(90);
     delay(300);
}
